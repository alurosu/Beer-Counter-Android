<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "alurosu.beer.counter"
    versionCode = "50"
    version     = "2.0.7" >

	<name>Beer Counter - Drinking Tool</name>

	<description>
		https://play.google.com/store/apps/details?id=alurosu.beer.counter
	</description>

	<author href="https://alurosu.com" email="admin@alurosu.com">
		alurosu
	</author>

	<plugin name="cordova-plugin-vibration" spec="~3.1.0"/>
	<plugin name="cordova-plugin-media" spec="~5.0.2"/>
	<plugin name="cordova-plugin-inappbrowser" spec="~3.0.0"/>
	<plugin name="cordova-plugin-whitelist" spec="~1.3.3"/>
	<plugin name="cordova-plugin-splashscreen" spec="~5.0.2" />
	
	<icon src="icon.png" />
	<splash src="splash.png" />
	<platform name="android">
        <icon src="res/android/ldpi.png" qualifier="ldpi" />
        <icon src="res/android/mdpi.png" qualifier="mdpi" />
        <icon src="res/android/hdpi.png" qualifier="hdpi" />
        <icon src="res/android/xhdpi.png" qualifier="xhdpi" />
        <icon src="res/android/xxhdpi.png" qualifier="xxhdpi" />
        <icon src="res/android/xxhdpi.png" qualifier="xxxhdpi" />
	
		<splash src="res/screen/android/splash-port-hdpi.png" qualifier="port-hdpi"/>
		<splash src="res/screen/android/splash-port-ldpi.png" qualifier="port-ldpi"/>
		<splash src="res/screen/android/splash-port-mdpi.png" qualifier="port-mdpi"/>
		<splash src="res/screen/android/splash-port-xhdpi.png" qualifier="port-xhdpi"/>
		<splash src="res/screen/android/splash-port-xxhdpi.png" qualifier="port-xxhdpi"/>
		<splash src="res/screen/android/splash-port-xxxhdpi.png" qualifier="port-xxxhdpi"/>
    </platform>
	
	<preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="true" />
	<preference name="SplashScreenDelay" value="3000" />
	<preference name="SplashMaintainAspectRatio" value="true" />
	
	<access origin="*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
</widget>