<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "alurosu.beer.counter"
    versionCode = "50"
    version     = "2.0.17" >

	<name>Beer Counter - Drinking Tool</name>

	<description>
		https://play.google.com/store/apps/details?id=alurosu.beer.counter
	</description>

	<author href="https://alurosu.com" email="admin@alurosu.com">
		alurosu
	</author>

	<plugin name="cordova-plugin-vibration" spec="~3.1.0"/>
	<plugin name="cordova-plugin-media" spec="~5.0.2" source="npm"/>
	<plugin name="cordova-plugin-inappbrowser" spec="~3.0.0"/>
	<plugin name="cordova-plugin-whitelist" spec="~1.3.3"/>
	<plugin name="cordova-plugin-splashscreen" spec="~5.0.2" />
	
	<icon src="icon.png" />
	<splash src="splash.png" />
	<platform name="android">
        <icon src="res/android/ldpi.png" qualifier="ldpi" platform="android"/>
        <icon src="res/android/mdpi.png" qualifier="mdpi" platform="android"/>
        <icon src="res/android/hdpi.png" qualifier="hdpi" platform="android"/>
        <icon src="res/android/xhdpi.png" qualifier="xhdpi" platform="android"/>
        <icon src="res/android/xxhdpi.png" qualifier="xxhdpi" platform="android"/>
        <icon src="res/android/xxhdpi.png" qualifier="xxxhdpi" platform="android"/>
	
		<splash src="res/screen/android/splash-port-hdpi.png" qualifier="port-hdpi" platform="android"/>
		<splash src="res/screen/android/splash-port-ldpi.png" qualifier="port-ldpi" platform="android"/>
		<splash src="res/screen/android/splash-port-mdpi.png" qualifier="port-mdpi" platform="android"/>
		<splash src="res/screen/android/splash-port-xhdpi.png" qualifier="port-xhdpi" platform="android"/>
		<splash src="res/screen/android/splash-port-xxhdpi.png" qualifier="port-xxhdpi" platform="android"/>
		<splash src="res/screen/android/splash-port-xxxhdpi.png" qualifier="port-xxxhdpi" platform="android"/>
    </platform>
	
	<preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="true" />
	<preference name="SplashScreenDelay" value="1000" />
	<preference name="SplashMaintainAspectRatio" value="true" />
	<preference name="SplashScreenSpinnerColor" value="false" />
	
    <preference name="android-targetSdkVersion" value="28" />
	
	<preference name="phonegap-version" value="cli-8.0.0" />
	
	<access origin="*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
</widget>