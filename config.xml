<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "alurosu.beer.counter"
    versionCode = "50"
    version     = "2.0.0" >

	<name>Beer Counter - Drinking Tool</name>

	<description>
		https://play.google.com/store/apps/details?id=alurosu.beer.counter
	</description>

	<author href="https://alurosu.com" email="admin@alurosu.com">
		alurosu
	</author>
	
	<preference name="orientation" value="portrait" />
	
	<access origin="*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />

	<plugin name="cordova-plugin-vibration" spec="3.1.0" source="npm" />
	<plugin name="cordova-plugin-media" spec="5.0.2" source="npm" />
	<plugin name="cordova-plugin-inappbrowser" spec="3.0.0" source="npm" />
	<plugin name="cordova-plugin-whitelist" spec="1.3.3" source="npm" />
	
	<icon src="icon.png" />
	<platform name="android">
        <icon src="res/android/ldpi.png" density="ldpi" />
        <icon src="res/android/mdpi.png" density="mdpi" />
        <icon src="res/android/hdpi.png" density="hdpi" />
        <icon src="res/android/xhdpi.png" density="xhdpi" />
        <icon src="res/android/xxhdpi.png" density="xxhdpi" />
        <icon src="res/android/xxhdpi.png" density="xxxhdpi" />
    </platform>
</widget>